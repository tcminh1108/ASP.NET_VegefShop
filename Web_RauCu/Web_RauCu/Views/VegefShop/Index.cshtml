@model IEnumerable<Web_RauCu.Models.SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutNguoiDung.cshtml";
}
<div class="col-sm-9 padding-right">
    <div class="features_items">
        <h2 class="title text-center">Sản phẩm</h2>
        @foreach (var sp in Model)
        {
            <div class="col-sm-4">
                <div class="product-image-wrapper">
                    <div class="single-products">
                        <div class="productinfo text-center">
                            <img style=" height: 150px; width: 150px;" src="@sp.Hinhanh" alt="@sp.Ten_SP"/>
                            <h2>@string.Format("{0:0,0}", sp.Giaban) VND</h2>
                            <p>@sp.Ten_SP</p>
                            <a href="@Url.Action("Themgiohang", "GioHang", new { Ma_SP = sp.Ma_SP , strURL= Request.Url.ToString() })" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a>
                        </div>
                    </div>
                </div>
                
            </div>
        }
        </div>
</div>



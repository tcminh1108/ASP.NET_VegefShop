@using Web_RauCu.Models
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutGioHang.cshtml";
}
<section id="cart_items">
    <div class="container">
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Sản phẩm</td>
                        <td class="description">Thông tin</td>
                        <td class="price">Đơn giá</td>
                        <td class="quantity">Số lượng</td>
                        <td class="total">Thành tiền</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sp in Model)
                    {
                        <tr>
                            <td class="cart_product">
                                <a href=""><img style=" height: 75px; width: 75px;" src="~/images_SP/@sp.sHinhanh" alt="@sp.sTen_SP"></a>
                            </td>
                            <td class="cart_description">
                                <h4><a href="">@sp.sTen_SP</a></h4>
                                <p>Mã sản phẩm: @sp.iMa_SP</p>
                            </td>
                            @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { Ma_SP = sp.iMa_SP }))
                            {
                                <td class="cart_price">
                                    <p>@string.Format("{0:0,0}", sp.dGiaban) VND</p>
                                </td>
                                <td class="cart_quantity">
                                    <div class="cart_quantity_button">
                                        <input class="cart_quantity_input" type="number" name="soluong" value="@sp.iSoluong" min="1" max="@sp.iSoluongton">
                                    </div>
                                </td>
                                <td class="cart_total">
                                    <p class="cart_total_price">@string.Format("{0:0,0}", sp.dThanhtien) VND</p>
                                </td>
                                <td class="cart_delete">
                                    <input type="submit" value="Cập Nhật" class="product-remove">
                                    @Html.ActionLink("x", "XoaSPgiohang", new { Ma_SP = sp.iMa_SP })
                                </td>
                            }
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
<section id="do_action" style="padding-left: 440px">
    <a class="btn btn-default update" href="@Url.Action("Xoagiohang","GioHang")">Xóa giỏ hàng</a>
    <a class="btn btn-default check_out" href="@Url.Action("DatHang","GioHang")">Đặt hàng</a>
</section>


